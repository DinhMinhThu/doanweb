@model PagedList.IPagedList<Doan_ChuyenMon.Models.TinTuc>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Timkiem";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tìm kiếm tin tức</h2>

<form class="form-inline" action="@Url.Action("Timkiem","TinTucs")" method="post">
    <div class="form-group">
        <label for="exampleInputName2">Nhập thông tin</label>
        <input type="text" class="form-control" name="keyword" id="example" placeholder="nhập tiêu đề cần tìm">
        <button type="submit" class="btn btn-default">Tìm</button>
    </div>

</form>
@if (ViewBag.dem > 0)
{
    <table class="table">
        <tr>
            <th>
                Mô tả ngắn
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Ngày đăng
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Người đăng
            </th>
            <th>
                Tiêu biếu
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MotaNgan)
                </td>
                <td>
                    @Html.Raw(item.Mota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDang)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Anh)" width="100px" height="100px" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NguoiDang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TieuBieu)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Ma }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Ma }) |
                    @Html.ActionLink("Xoá", "Delete", new { id = item.Ma })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h2 style="text-align:center; color:red">Không tìm thấy tên yêu cầu</h2>
}
