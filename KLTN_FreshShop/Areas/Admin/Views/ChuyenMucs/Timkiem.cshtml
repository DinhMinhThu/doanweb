@model PagedList.IPagedList<Doan_ChuyenMon.Models.ChuyenMuc>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Timkiem";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tìm kiếm chuyên mục</h2>

<form class="form-inline" action="@Url.Action("Timkiem","ChuyenMucs")" method="post">
    <div class="form-group">
        <label for="exampleInputName2">Nhập thông tin cần tìm</label>
        <input type="text" class="form-control" name="keyword" id="example" placeholder="nhập tên chuyên mục cần tìm">
        <button type="submit" class="btn btn-default">Tìm</button>
    </div>

</form>

<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Mô tả
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Ma }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Ma }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.Ma })
            </td>
        </tr>
    }

</table>
